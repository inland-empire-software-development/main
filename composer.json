{
  "name": "iesd/iesd-main-theme",
  "description": "Minimal WordPress theme with UIKit CSS framework - blank canvas ready for customization",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "IESD Team"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^2.0",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "IESD\\Theme\\": "inc/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IESD\\Theme\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=.phpcs.xml --extensions=php --ignore=vendor/ .",
    "phpcs-fix": "phpcbf --standard=.phpcs.xml --extensions=php --ignore=vendor/ .",
    "phpstan": "phpstan analyse --level=5 functions.php header.php footer.php index.php single.php inc/",
    "lint": [
      "@phpcs",
      "@phpstan"
    ],
    "setup-dev": [
      "@composer install",
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/,vendor/phpcompatibility/php-compatibility"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
