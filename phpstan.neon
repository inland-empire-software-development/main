includes:
    - vendor/szepeviktor/phpstan-wordpress/extension.neon

parameters:
    level: 5
    
    paths:
        - functions.php
        - header.php
        - footer.php
        - index.php
        - single.php
    
    excludePaths:
        - vendor/
        - node_modules/
        - dist/
        - .git/
        - inc/template-functions.php
    
    # WordPress-specific settings
    bootstrapFiles:
        - vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
    
    # WordPress-specific ignore patterns
    ignoreErrors:
        # Allow WordPress naming conventions for Walker classes
        - '#Method [a-zA-Z0-9\\_]+::(start_lvl|end_lvl|start_el|end_el) is not in camel caps format#'
        - '#Class name "[a-zA-Z0-9\\_]*Walker[a-zA-Z0-9\\_]*" is not in PascalCase format#'
        
        # Allow WordPress hook priority syntax
        - '#Parameter \#3 \$priority of function add_action expects int, string given#'
        - '#Parameter \#3 \$priority of function add_filter expects int, string given#'
        
        # Allow WordPress file structure conventions
        - '#A file should declare new symbols.*or.*execute logic.*but should not do both#'
        
        # Style issues (not code errors)
        - '#File ends with a trailing whitespace#'
        
    # WordPress coding standards compatibility
    reportUnmatchedIgnoredErrors: false 