{
  "name": "iesd-main-theme",
  "version": "1.0.0",
  "description": "Modern WordPress theme with hot reloading and SCSS support",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint:css": "stylelint 'assets/scss/**/*.scss'",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "format": "prettier --write 'assets/**/*.{js,scss,css}'",
    "start": "npm run dev"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
